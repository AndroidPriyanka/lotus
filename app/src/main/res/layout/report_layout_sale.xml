<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/tr_stock_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="1040dp"
            android:layout_height="wrap_content"
            android:weightSum="100" >

             <TextView
                android:id="@+id/tv_productid"
                style="@style/report_textview"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                 />
             
            <TextView
                android:id="@+id/tv_category"
                style="@style/report_textview"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:maxLength="5"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Category" />
            
           

            <TextView
                android:id="@+id/tv_type"
                style="@style/report_textview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
               android:singleLine="true"
               android:maxLength="20"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Type" />

            <TextView
                android:id="@+id/tv_product"
                style="@style/report_textview"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
               
                  android:singleLine="true"
               android:maxLength="16"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Product" />
            
          
                        <TextView
                android:id="@+id/tv_report_size"
                style="@style/report_textview"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
                android:layout_weight="1"
                  android:singleLine="true"
               android:maxLength="12"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Size" />

            <TextView
                android:id="@+id/tv_report_price"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                style="@style/report_textview"
               
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Price" />

           
            <TextView
                android:id="@+id/tv_open"
                style="@style/report_textview"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Stock in hand" />

            <TextView
                android:id="@+id/tv_sold"
                style="@style/report_textview"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Sold" />

           
            <TextView
                android:id="@+id/tv_close"
                style="@style/report_textview"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Close" />



            <TextView
                android:id="@+id/tv_report_total_amount"
                style="@style/report_textview"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Total Amount" />

            <TextView
                android:id="@+id/tv_report_discount"
                android:layout_width="55dp"
                style="@style/report_textview"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="discount" />

            <TextView
                android:id="@+id/tv_report_total_net_amount"
                style="@style/report_textview"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
               android:paddingLeft="5dp"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:text="Total net Amount" />
        </TableRow>
    </TableLayout>

</LinearLayout>