<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tr_label_focusreport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:gravity="center"
        android:weightSum="5">

        <TextView
            android:id="@+id/txt_prod_name"
            style="@style/report_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:background="@layout/tableborder_for_fields"
            android:gravity="left"
            android:text="product name" />

        <TextView
            android:id="@+id/txt_size"
            style="@style/report_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@layout/tableborder_for_fields"
            android:gravity="center"
            android:text="size" />

        <TextView
            android:id="@+id/txt_mrp"
            style="@style/report_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@layout/tableborder_for_fields"
            android:gravity="center"
            android:text="mrp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_target_qty"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Qty" />

            <TextView
                android:id="@+id/tv_target_rs"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Rs." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_achivmnt_qty"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Qty" />

            <TextView
                android:id="@+id/tv_achivmnt_rs"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Rs." />

        </LinearLayout>

    </TableRow>

</LinearLayout>
