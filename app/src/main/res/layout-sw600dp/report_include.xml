<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal" 
    android:background="@drawable/header"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logonew" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:background="@drawable/logout" />

    <RadioGroup
        android:id="@+id/rg_lhm_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rb_stock" android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" android:visibility="gone">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LH"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LHM"
            android:textSize="14sp" />
    </RadioGroup>
    
  <!--   <RadioButton
        android:id="@+id/rb_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rb_tester"
        android:layout_alignBottom="@+id/rb_tester"
        android:layout_marginLeft="160dp"
        android:layout_toRightOf="@+id/btn_home"
        android:text="Sale"
        android:textSize="22dp" /> -->

    <RadioButton
        android:id="@+id/rb_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rb_tester"
        android:layout_below="@+id/rb_tester"
        android:text="Attendance"
        android:textSize="22dp"
        android:layout_marginRight="50dp"
        android:textStyle="italic"
        android:typeface="serif" />



    <RadioButton
        android:id="@+id/rb_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rb_tester"
        android:layout_alignBottom="@+id/rb_tester"
        android:layout_marginLeft="76dp"
        android:layout_toRightOf="@+id/btn_home"
        android:text="Stock"
        android:textStyle="italic"
        android:typeface="serif"
        android:textSize="22dp" />

    <RadioButton
        android:id="@+id/rb_tester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tester"
        android:textSize="22dp"
        android:textStyle="italic"
        android:typeface="serif"
        android:layout_alignBaseline="@+id/btn_home"
        android:layout_alignBottom="@+id/btn_home"
        android:layout_toLeftOf="@+id/btn_logout"
        android:layout_toStartOf="@+id/btn_logout"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="35dp" />

</RelativeLayout>
