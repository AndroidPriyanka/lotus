<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/headernew"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="BOC" />

        <TextView
            android:id="@+id/txt_boc"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Year" />

        <TextView
            android:id="@+id/txt_year"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="TextView" />
    </LinearLayout>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingBottom="25dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
  
  >
    <TableLayout android:id="@+id/tl_cumulative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" android:layout_margin="10dp" android:background="#000000">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="#990066" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium" android:background="#ffffff" android:layout_margin="0.70dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LH"
                android:textAppearance="?android:attr/textAppearanceMedium"  android:background="#ffffff" android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LM"
                android:textAppearance="?android:attr/textAppearanceMedium" android:background="#ffffff" android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total"
                android:textAppearance="?android:attr/textAppearanceMedium" android:background="#ffffff" android:layout_margin="1dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceSmall" android:background="#ffffff" android:layout_margin="1dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                    
                        android:text="Sale Value" android:background="#ffffff" android:layout_margin="1dp"/>

                    <TextView
                       
                        android:layout_height="wrap_content"
                        android:layout_width="26dp"
                        android:text="Sale Unit" android:background="#ffffff" android:layout_margin="1dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:text="Sale Value" android:background="#ffffff" android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:text="Sale Unit" android:background="#ffffff" android:layout_margin="1dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:text="Sale Value" android:background="#ffffff" android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:text="Sale Unit" android:background="#ffffff" android:layout_margin="1dp"/>
                </TableRow>
            </TableLayout>

        </TableRow>

      
    </TableLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>