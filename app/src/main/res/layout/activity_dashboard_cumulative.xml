<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/headernew"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="BOC" />

        <TextView
            android:id="@+id/txt_boc"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Year" />

        <TextView
            android:id="@+id/txt_year"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="TextView" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
  
  >
    <TableLayout
        android:id="@+id/tl_cumulative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="#000000">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#990066"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium" android:background="#ffffff" android:layout_margin="0.70dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LH"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"  android:background="#ffffff" android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LM"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium" android:background="#ffffff" android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium" android:background="#ffffff" android:layout_margin="1dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall" android:background="#ffffff" android:layout_margin="1dp"/>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sale Value"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="Sale Unit"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:layout_margin="1dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sale Value"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sale Unit"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_margin="1dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sale Value"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sale Unit"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_margin="1dp"/>
                </TableRow>
            </TableLayout>

        </TableRow>

      
    </TableLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>