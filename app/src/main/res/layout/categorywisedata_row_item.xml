<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableRow
        android:id="@+id/tr_label_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="4">

        <TextView
            android:id="@+id/txt_type"
            style="@style/report_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@layout/tableborder_for_fields"
            android:gravity="center"
            android:text="type" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_open_qty"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Qty" />


            <TextView
                android:id="@+id/tv_open_rs"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:text="Rs." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_receive_qty"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Qty" />


            <TextView
                android:id="@+id/tv_receive_rs"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:text="Rs." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_close_qty"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Qty" />


            <TextView
                android:id="@+id/tv_close_rs"
                style="@style/report_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:text="Rs." />

        </LinearLayout>

