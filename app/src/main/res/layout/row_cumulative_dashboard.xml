<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRow3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceSmall" android:background="#ffffff" android:layout_margin="1dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_lh_saleValue"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
          
                android:text="Sale Value" android:background="#ffffff" android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/txt_lh_saleUnit"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text="Sale Unit" android:background="#ffffff" android:layout_margin="1dp"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_lm_saleValue"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text="Sale Value" android:background="#ffffff" android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/txt_lm_saleUnit"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text="Sale Unit" android:background="#ffffff" android:layout_margin="1dp"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_cumu_saleValue"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text="Sale Value" android:background="#ffffff" android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/txt_cumu_saleUnit"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text="Sale Unit" android:background="#ffffff" android:layout_margin="1dp"/>
        </TableRow>
    </TableLayout>

</TableRow>