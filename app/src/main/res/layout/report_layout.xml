<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1680dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tr_stock_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_type"
                style="@style/report_textview"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Type" />

            <TextView
                android:id="@+id/tv_product"
                style="@style/report_textview"
                android:layout_width="415dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Product" />

            <TextView
                android:id="@+id/tv_report_price"
                style="@style/report_textview"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Price" />


            <TextView
                android:id="@+id/tv_report_size"
                style="@style/report_textview"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:maxLength="12"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Size" />


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_open_qty"
                    style="@style/report_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@layout/tableborder_for_fields"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="Qty" />


                <TextView
                    android:id="@+id/tv_open_rs"
                    style="@style/report_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@layout/tableborder_for_fields"
                    android:gravity="left"
                    android:singleLine="true"
                    android:paddingLeft="5dp"
                    android:text="Rs." />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_r_stock_received"
                style="@style/report_textview"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Stock received" />

            <TextView
                android:id="@+id/tv_return_saleable"
                style="@style/report_textview"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Return-saleable" />

            <TextView
                android:id="@+id/tv_return_non_saleable"
                style="@style/report_textview"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Return non saleable" />

           <!-- <TextView
                android:id="@+id/tv_open"
                style="@style/report_textview"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Stock in hand" />-->

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_sold_qty"
                    style="@style/report_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@layout/tableborder_for_fields"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="Qty" />


                <TextView
                    android:id="@+id/tv_sold_rs"
                    style="@style/report_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@layout/tableborder_for_fields"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="Rs." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_close_qty"
                    style="@style/report_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@layout/tableborder_for_fields"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="Qty" />


                <TextView
                    android:id="@+id/tv_close_rs"
                    style="@style/report_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@layout/tableborder_for_fields"
                    android:gravity="left"
                    android:singleLine="true"
                    android:paddingLeft="5dp"
                    android:text="Rs." />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_report_total_amount"
                style="@style/report_textview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Total Amount" />

            <TextView
                android:id="@+id/tv_report_discount"
                style="@style/report_textview"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="discount" />

            <TextView
                android:id="@+id/tv_report_total_net_amount"
                style="@style/report_textview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Total net Amount" />

            <TextView
                android:id="@+id/tv_status"
                style="@style/report_textview"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Status" />


            <TextView
                android:id="@+id/tv_productid"
                style="@style/report_textview"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="id"
                android:singleLine="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_outlet"
                style="@style/report_textview"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@layout/tableborder_for_fields"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Outlet" />

        </TableRow>
    </TableLayout>

</LinearLayout>