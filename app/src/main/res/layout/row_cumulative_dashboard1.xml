<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRow3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_margin="0.7dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:text="Date"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:stretchColumns="*"
        android:layout_weight="1.5">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_lh_saleValue"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="0.2dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="Sale Value" />

            <TextView
                android:id="@+id/txt_lh_saleUnit"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="0.2dp"
                android:gravity="center"
                android:background="#ffffff"
                android:text="Sale Unit" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:stretchColumns="*"
        android:layout_weight="1.5">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_cumu_saleValue"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="0.2dp"
                android:gravity="center"
                android:background="#ffffff"
                android:text="Sale Value" />

            <TextView
                android:id="@+id/txt_cumu_saleUnit"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="0.2dp"
                android:background="#ffffff"
                android:text="Sale Unit" />
        </TableRow>
    </TableLayout>

</TableRow>